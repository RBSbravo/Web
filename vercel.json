{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/index.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        },
        {
          "key": "Pragma",
          "value": "no-cache"
        },
        {
          "key": "Expires",
          "value": "0"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "installCommand": "npm install --legacy-peer-deps --force",
  "buildCommand": "npm run build",
  "env": {
    "VITE_API_BASE_URL": "https://backend-ticketing-system.up.railway.app/api",
    "VITE_SOCKET_URL": "https://backend-ticketing-system.up.railway.app",
    "VITE_WS_URL": "wss://backend-ticketing-system.up.railway.app",
    "VITE_APP_NAME": "Ticketing and Task Management System",
    "VITE_APP_VERSION": "1.0.0"
  }
}

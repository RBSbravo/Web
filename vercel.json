{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot))",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "installCommand": "npm install --legacy-peer-deps --force",
  "buildCommand": "npm run build",
  "env": {
    "VITE_API_BASE_URL": "https://backend-ticketing-system.up.railway.app/api",
    "VITE_SOCKET_URL": "https://backend-ticketing-system.up.railway.app",
    "VITE_WS_URL": "wss://backend-ticketing-system.up.railway.app",
    "VITE_APP_NAME": "Ticketing and Task Management System",
    "VITE_APP_VERSION": "1.0.0"
  }
}
